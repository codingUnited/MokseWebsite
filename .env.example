# ==========================
# üîß Docker / Build Settings
# ==========================

# Compose profile: dev | prod
COMPOSE_PROFILES=dev

# Dockerfile build target: dev | runner
BUILD_TARGET=dev

# App port exposed on host
APP_PORT=3000

# Node environment
NODE_ENV=development

# Command used to start the app inside container
APP_CMD=npm run dev

# Dev-only bind mounts
DEV_MOUNT=.:/app
DEV_NODEMODULES_MOUNT=/app/node_modules


# ==========================
# üóÑÔ∏è MongoDB Configuration
# ==========================

# Host port mapping (only for dev; leave blank in prod)
MONGO_PORT=27017

# Default database
MONGO_DB=mokse

# Root credentials (used by init and local IDE)
MONGO_ROOT_USER=root
MONGO_ROOT_PASS=changeme

# Application DB user (created by init script)
MONGO_APP_USER=appuser
MONGO_APP_PASS=apppass

# Connection string used by the app container
# (the 'mongo' hostname matches the service name in docker-compose)
MONGODB_URI=mongodb://${MONGO_APP_USER}:${MONGO_APP_PASS}@mongo:27017/${MONGO_DB}?authSource=admin
